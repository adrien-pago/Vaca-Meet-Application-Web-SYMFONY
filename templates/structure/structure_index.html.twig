{% extends 'base.html.twig' %}

{% block title %}Gestion des Structures{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hidden-column {
            display: none;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="container">
        <h1>Gestion des Structures</h1>
        
        <button id="add-structure" class="btn btn-primary mb-3">Ajouter une structure</button>

        <div id="current-camping" style="display: none;">{{ nomCamping }}</div> {#  récupérer le nom du camping ici à partir du controller #}

        <table id="structure-table" class="table">
            <thead>
                <tr>
                    <th scope="col" class="hidden-column">#</th>
                    <th scope="col">Camping</th>
                    <th scope="col">Libellé</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for structure in structures %}
                <tr>
                    <td class="hidden-column">{{ structure.id }}</td>
                    <td>{{ nomCamping }}</td> {# Afficher le nom du camping ici #}
                    <td>{{ structure.libelleStructure }}</td>
                    <td>{{ structure.nbStructure }}</td>
                    <td> 
                        <a href="#" data-edit-url="{{ path('structure_edit', {'id': structure.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <a href="#" data-delete-url="{{ path('structure_delete', {'id': structure.id}) }}" class="btn btn-sm btn-danger delete-structure" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette structure ?')">Supprimer</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/structure.js') }}"></script>
{% endblock %}
