{% extends 'base.html.twig' %}

{% block title %}Gestion des Structures{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/structure.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/styles/dynamic-content-card.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-30">
            <div class="card card-content">
                <div class="card-header text-center">
                    <h1>Gestion des Structures</h1>
                    <button id="add-structure" class="btn btn-primary add-structure-button">Ajouter une structure</button>
                </div>

                <div class="card-body">
                    <div id="structure-table-container">
                        <table id="structure-table" class="table table-modern">
                            <thead>
                                <tr>
                                    <th style="display: none;">ID</th> {# Colonne ID cachée dans l'en-tête #}
                                    <th>Libellé</th>
                                    <th>Nombre</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for structure in structures %}
                                    <tr>
                                        <td class="structure-id" style="display: none;">{{ structure.idStructure }}</td> {# ID masqué #}
                                        <td>{{ structure.libelle }}</td>
                                        <td>{{ structure.nbStructure }}</td>
                                        <td>
                                            <a href="#" class="btn btn-sm btn-warning edit-structure">Modifier</a>
                                            <a href="#" class="btn btn-sm btn-danger delete-structure">Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/structure.js') }}"></script>
{% endblock %}
