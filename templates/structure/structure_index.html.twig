{% extends 'base.html.twig' %}

{% block title %}Gestion des Structures{% endblock %}

{% block body %}

    <div class="container">
        <h1>Gestion des Structures</h1>

        <a href="{{ path('structure_new') }}" class="btn btn-primary mb-3">Ajouter une structure</a>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Camping</th>
                    <th scope="col">Libellé</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">État</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for structure in structures %}
                <tr>
                    <th scope="row">{{ structure.id }}</th>
                    <td>{{ structure.camping.nom }}</td>
                    <td>{{ structure.libelleStructure }}</td>
                    <td>{{ structure.nbStructure }}</td>
                    <td>{{ structure.etatStructure }}</td>
                    <td>
                        <a href="{{ path('structure_edit', {'id': structure.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <a href="{{ path('structure_delete', {'id': structure.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette structure ?')">Supprimer</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
