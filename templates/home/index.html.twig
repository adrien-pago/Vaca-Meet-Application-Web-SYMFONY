{% extends 'base.html.twig' %}

{% block title %}Vaca Meet{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/home.css') }}">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-center">
        <span class="navbar-text mx-4">Bienvenue au {{ app.user.nomCamping }}</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Gestion du compte</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Déconnexion</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Menu</h5>
                        <ul class="list-group list-group-flush d-flex flex-row justify-content-between flex-wrap">
                            <li class="list-group-item"><a href="#" id="load-structures" data-url="{{ path('structure_index') }}">Gestion Structure</a></li>
                            <li class="list-group-item"><a href="#">Gestion Activité</a></li>
                            <li class="list-group-item"><a href="#">Gestion Planning</a></li>
                            <li class="list-group-item"><a href="#">Gestion Password</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-body">
                        <div id="dynamic-content">
                            <!-- Le contenu dynamique sera chargé ici via AJAX -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inclure le script externe -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>


    <script src="{{ asset('js/structure.js') }}"></script>

{% endblock %}
