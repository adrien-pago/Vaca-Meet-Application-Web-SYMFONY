{% extends 'base.html.twig' %}

{% block title %}Modification du Mot de Passe{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <h2>{{ message }}</h2>
</div>
        <form id="passwordVacaForm" method="post">
            <div class="form-group">
                <label for="newPassword">Nouveau mot de passe</label>
                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirmer le nouveau mot de passe</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                <div class="d-flex justify-content-center mt-3"> <!-- Ajout de mt-3 pour la marge supÃ©rieure -->
                    <button type="submit" class="btn btn-primary" id="savePasswordBtn">Valider le mot de passe</button>
                </div>
        </form>
    </div>
{% endblock %}
