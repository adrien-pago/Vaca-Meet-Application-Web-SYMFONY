{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css//register.css') }}">
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container d-flex align-items-center justify-content-center">
        <div class="row">
            <div class="col-lg-10">
                <h1 class="text-center">Inscription</h1> 
                <div class="card">
                    <div class="card-body" >
                        {{ form_start(registrationForm, {'attr': {'class': 'form-group'}}) }}
                            <div class="form-group" >
                                {{ form_label(registrationForm.email) }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(registrationForm.password) }}
                                {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(registrationForm.nomCamping) }}
                                {{ form_widget(registrationForm.nomCamping, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(registrationForm.siret) }}
                                {{ form_widget(registrationForm.siret, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(registrationForm.rgpdAccepted) }}
                                {{ form_widget(registrationForm.rgpdAccepted) }}
                            </div>
                            <div class="form-group">
                                <a href="{{ asset('assets/Charte-RGPD.pdf') }}" target="_blank">Voir le réglement RGPD</a>
                            </div>
                            <div class="form-group">
                                {{ form_widget(registrationForm.register, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        {{ form_end(registrationForm) }}

                        <p>Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
