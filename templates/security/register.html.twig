{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <h1 class="card-title">Inscription</h1>
                        <form method="post" class="mt-3">
                            {# Afficher les erreurs globales du formulaire #}
                            {{ form_errors(registrationForm) }}
                            
                            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Email'}}) }}
                            {{ form_errors(registrationForm.email) }} {# Afficher les erreurs pour le champ email #}
                            {{ form_row(registrationForm.password, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Mot de passe'}}) }}
                            {{ form_errors(registrationForm.password) }} {# Afficher les erreurs pour le champ mot de passe #}
                            {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Nom'}}) }}
                            {{ form_errors(registrationForm.nom) }} {# Afficher les erreurs pour le champ nom #}
                            {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Prénom'}}) }}
                            {{ form_errors(registrationForm.prenom) }} {# Afficher les erreurs pour le champ prénom #}

                            <button type="submit" class="btn btn-primary btn-block">S'inscrire</button>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="{{ path('app_login') }}" class="btn btn-link">Retour à la connexion</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
