{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1 class="text-center">Vaca-Meet</h1>

    <div class="container d-flex align-items-center justify-content-center" style="height: 50vh;">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body" style="height: 50vh;" >
                        {{ form_start(loginForm, {'attr': {'class': 'form-group'}}) }}
                            <div class="form-group" >
                                {{ form_label(loginForm.email) }}
                                {{ form_widget(loginForm.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(loginForm.password) }}
                                {{ form_widget(loginForm.password, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group mt-3">
                                {{ form_widget(loginForm.login, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        {{ form_end(loginForm) }}

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <p>Pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}